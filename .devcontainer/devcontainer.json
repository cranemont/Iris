{
  "forwardPorts": [
    3000
  ],
  "name": "iris-devcontainer",
  "dockerComposeFile": [
    "docker-compose.yml"
  ],
  "service": "iris",
  "runServices": [
    "iris",
    "redis",
    "rabbitmq"
  ],
  "workspaceFolder": "/app/go/src",
  "initializeCommand": "go install -v golang.org/x/tools/gopls@latest; go install -v github.com/ramya-rao-a/go-outline@latest",
  "postCreateCommand": "git config --global --add safe.directory /app/go/src",
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "golang.go",
        "golang.go-nightly",
        "albert.TabOut",
        "donjayamanne.githistory",
        "eamodio.gitlens"
      ]
    }
  }
}